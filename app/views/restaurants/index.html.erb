<div class='container'>
  <h1>Here is the list of all the restaurants</h1>
    <div class="row">
      <% @restaurants.each do |restaurant| %>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="card">
          <h2><%= restaurant.name %></h2>
          <p>Address: <%= restaurant.address%></p>
          <p>Phone Number: <%= restaurant.phone_number%></p>
          <p>Type of cuisine: <%= restaurant.category%></p>
          <p><%= link_to('See detailed page', restaurant_path(restaurant.id)) %></p>
        </div>
    </div>
    <% end %>
  </div>
</div>
