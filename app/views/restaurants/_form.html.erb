<%= simple_form_for @restaurant, :html=> {class: 'container'} do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, hint: 'Choose between the listed categories: chinese, italian, japanese, french, belgian' %>
  <%= f.button :submit, :class => 'btn-success'%>
<% end %>

